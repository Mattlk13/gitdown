{
  "author": {
    "email": "gajus@gajus.com",
    "name": "Gajus Kuizinas",
    "url": "http://gajus.com"
  },
  "bin": "./dist/bin/index.js",
  "dependencies": {
    "bluebird": "^3.7.2",
    "deadlink": "^1.1.3",
    "filesize": "^6.0.1",
    "get-urls": "^9.2.0",
    "gitinfo": "^2.4.0",
    "glob": "^7.1.6",
    "jsonfile": "^5.0.0",
    "lodash": "^4.17.15",
    "markdown-contents": "^1.0.11",
    "marked": "^0.8.0",
    "moment": "^2.24.0",
    "stack-trace": "^0.0.10",
    "yargs": "^15.1.0"
  },
  "description": "Github markdown preprocessor.",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/plugin-transform-flow-strip-types": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/register": "^7.8.3",
    "babel-plugin-istanbul": "^6.0.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.9",
    "eslint": "~6.8.0",
    "eslint-config-canonical": "~19.0.1",
    "husky": "^4.2.3",
    "mocha": "^7.0.1",
    "nock": "^11.8.2",
    "nyc": "^15.0.0",
    "require-uncached": "^2",
    "semantic-release": "^17.0.3",
    "sinon": "^8.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test && npm run build",
      "pre-push": "babel-node ./src/bin/index.js ./.README/README.md --output-file ./README.md --check"
    }
  },
  "keywords": [
    "github",
    "markdown",
    "table of contents",
    "toc",
    "include",
    "variable",
    "transclusion"
  ],
  "license": "BSD-3-Clause",
  "main": "./dist/index.js",
  "name": "gitdown",
  "repository": {
    "type": "git",
    "url": "https://github.com/gajus/gitdown"
  },
  "scripts": {
    "build": "babel ./src --out-dir ./dist --copy-files",
    "create-readme": "babel-node ./src/bin/index.js ./.README/README.md --output-file ./README.md",
    "lint": "eslint --report-unused-disable-directives ./src ./tests",
    "test": "nyc mocha \"./tests/**/*.js\" --require @babel/register"
  },
  "version": "2.5.2"
}
